{%  extends "base.html.twig" %}

{% block body %}
        {% set parameters = app.session.get('parameters') %}
        <!-- ### $App Screen Content ### -->
        <main class='main-content bgc-grey-100'>
          <div id='mainContent'>
            <div class="container-fluid">
                <div class="row mT-10">
                    <div class="col-md-8">
                        <h4 class="c-grey-900 mB-20">Structures OPP</h4>
                    </div>
                    {% if is_granted("ROLE_ADMIN") %}
                        <div class="col-md-4  text-right">
                            <div class="form-group">
                                <a id="addStructure" class="btn btn-primary" href="{{path('createStructure')}}" role="button">Ajouter</a>
                                <a id="showStructure" class="btn btn-primary" href="{{path('getStructure')}}" role="button">Modifier</a>
                            </div>
                        </div>
                    {% endif %}
                </div>
