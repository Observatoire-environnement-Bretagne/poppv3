                                <div class="col-md-4 text-center p-20 mT-20 structure_logo">
                                    <div class="col-12 mB-20">
                                        <a href="{{path('showStructure', {structureId : structure.PorteurOppId})}}">{% if structure.porteurOppLogo %}<img class="img-fluid" src='{{parameters['URL_FOLDER_FILES']}}/{{structure.porteurOppLogo.fileManagerUri}}' style="max-height:100px"/>{% endif %}</a>
