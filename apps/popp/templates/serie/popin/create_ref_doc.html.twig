<div class="row mT-10">
    <div class="col-md-12">
        <input id="document_ref_file_action" type="hidden" class="form-control form-refdoc" />
        <input id="document_ref_file_titre" type="hidden" class="form-control form-refdoc" />
        <input id="document_ref_file_poids" type="hidden" class="form-control form-refdoc" />
        <input id="document_ref_file_url" type="hidden" class="form-control form-refdoc" />
        <h6>Document de référence * </h6>
        <form id="addDocRefDropzone" name="addDocRefDropzone" action="{{path('addPhoto')}}" class="dropzone" method="post" enctype="multipart/form-data">
            <div class="fallback">
                <input type="file"/>
            </div>
        </form>
        <span class="formErrors"></span>
    </div>
</div>
