<main class='main-content bgc-grey-100'>
        <div id='mainContent'>
                <div class="container-fluid">
{#                        <h4 class="c-grey-900 mT-10 mB-30">Cr&eacute;ation de s&eacute;rie photo</h4>#}
                        <div class="row">
                                <div class="col-md-12">
                                        <div class="bgc-white bd bdrs-3 p-20 mB-20">
                                            <div class="row mT-10">
                                                <h5 class='col-12 mB-20'>Ajout d'un logo partenaire</h5>
                                                <div class="col-md-12">
                                                    <h6>Objet</h6>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <input id="add_logo_titre" type="text" class="form-control" placeholder="Titre * " required />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row mT-10">
                                                <div class="col-md-12">
                                                    <label for="add_logo_dropzone">Logo partenaire *</label>
                                                    <form action="/file-upload" class="dropzone form-control">
                                                      <div class="fallback">
                                                        <input id="add_logo_dropzone" name="file" type="file" value="test"/>
                                                      </div>
                                                    </form>
                                                </div>
                                            </div>
                                            <div class="row mT-10">
                                                <div class="col-md-12  text-right">
                                                    <div class="form-group">
                                                        <button class="btn btn-secondary cur-p" data-toggle="modal" data-target="#modalValidation">Validation</button>
                                                    </div>
                                                </div>
                                            </div>
                                            {#Modal validation#}
                                            <div id="modalValidation" class="modal" tabindex="-1" role="dialog">
                                                <div class="modal-dialog" role="document">
