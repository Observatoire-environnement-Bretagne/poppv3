{%  extends "base.html.twig" %}

{% block body %}

<main class='main-content bgc-grey-100'>
  <div id='mainContent'>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="bgc-white bd bdrs-3 p-20 mB-20">
            <div class="row mT-10">
                <div class="col-md-8">
                    <h4 class="c-grey-900 mB-20">Liste des photos</h4>
                </div>
                <div class="col-md-4  text-right">
                    <div class="form-group">
                        <a href="{{ path('createPhoto')}}"><button type="button" class="btn btn-secondary" id='addPhoto'>Ajouter des photos</button></a><br/><br/>
                    </div>
                </div>
            </div>
            <table id="dataTablePhotos" class="table table-striped table-bordered" cellspacing="0" width="100%">
              <thead>
                <tr>
                  <th>Id</th>
                  <th>Titre</th>
                  <th>Auteur</th>
                  <th>{{ "labelSerie"|trans|capitalize }}</th>
                  <th style="min-width:100px">Action</th>
                </tr>
              </thead>
              <tbody>
                {% for photo in photos %}
                <tr>
                  <td id ="strucId">{{photo.photoId}}</td>
                  <td>{% if photo.photoTitre %}{{photo.photoTitre}}{% endif %}</td>
                  <td>{% if photo.photoAuteur %}{{photo.photoAuteur}}{% endif %}</td>
                  <td>{% if photo.photoSerie %}{{ photo.photoSerie.serieTitre }}{% endif %}</td>
                  <td>
                    <a class="modify" ><i class="c-light-blue-500 ti ti-pencil"></i></a>
                    <a class="remove"><i class="c-red-500 ti ti-trash"></i></a>
                  </td>
                </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
{% endblock body %}