{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

    <div class="peers ai-s fxw-nw h-100vh">
        <div class="d-n@sm- peer peer-greed h-100 pos-r bgr-n bgpX-c bgpY-c bgsz-cv" style='background-image:  url("{{ asset('assets/images/bg.jpg') }}")'>
            {#<div class="pos-a centerXY">#}
                {#<div class="bgc-white bdrs-50p pos-r" style='width: 120px; height: 120px;'>#}
                    {#<img class="pos-a centerXY" src="{{ asset('assets/images/sf.png') }}" alt="logo" />#}
                {#</div>#}
            {#</div>#}
        </div>

        <div class="col-12 col-md-4 peer pX-40 pY-80 h-100 bgc-white scrollable pos-r" style='min-width: 320px;'>
            {% if error %}
                <div class="alert alert-danger" role="alert">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
                <br/>
            {% endif %}

            <h3>Bienvenue sur la POPP</h3>

            <h4 class="fw-300 c-grey-900 mB-40">Connexion</h4>

            <form action="{{ path("fos_user_security_check") }}" method="POST">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                <div class="form-group">
                    <label class="text-normal text-dark">{{ 'security.login.username'|trans }}:</label>
                    <input type="text" class="form-control" placeholder="{{ 'security.login.username'|trans }}" id="username" name="_username" value="{{ last_username }}" required="required">
                </div>
                <div class="form-group">
                    <label class="text-normal text-dark">{{ 'security.login.password'|trans }}:</label>
                    <input type="password" class="form-control" placeholder="{{ 'security.login.password'|trans }}" id="password" name="_password" required="required">
                </div>
                <div class="form-group">
                    <div class="peers ai-c jc-sb fxw-nw">
                        <!--div class="peer">
                            <div class="checkbox checkbox-circle checkbox-info peers ai-c">
                                <input type="checkbox" id="inputCall1" name="inputCheckboxesCall" class="peer">
                                <label for="inputCall1" class=" peers peer-greed js-sb ai-c">
                                    <span class="peer peer-greed">Se souvenir de moi</span>
                                </label>
                            </div>
                        </div-->
                        <div class="peer">
                            <button class="btn cur-p btn-primary" id="_submit" name="_submit">{{ 'security.login.submit'|trans }}</button>
                        </div>
                    </div>
                </div>
            </form>
            <div class="peers ai-c jc-sb fxw-nw">
                <div class="peer">
                    <a  href="{{ path('public_page') }}"><button class="btn cur-p btn-outline-warning">Acc&egrave;s public</button></a>
                </div>
                <div class="peer">
                    <a  href="{{ path('fos_user_registration_register') }}"><button class="btn cur-p btn-outline-warning">Cr√©ation d'un compte</button></a>
                </div>
            </div>

        </div>
    </div>

{% endblock fos_user_content %}
